<div class='container'>
  <div calss'row'>
    <div class="form-inline text-left">
      <h3><b>アイテム履歴</b></h3>
      <h5>(全<%= Item.where(user_id: current_user.id, deleted_at: true).count %>件)</h5>
    </div>
    <% if @items.count == 0 %>
      履歴がありません
    <% else %>
    <div class="row row-cols-md-4 row-cols-2">
      <% @items.each do |item| %>
        <div class="col">
          <div  class="row shadow-sm h-100 pt-3 mb-2 mx-1 bg-body bg-light rounded text-aline">
            <div class="bd-highlight mx-1 mx-auto text-center">
              <%= link_to item_path(item) do %>
                <img class="mx-auto"><%= image_tag item.get_image_id, width: '60%', height: '90%' %></img>
              <% end %>
            </div>
            <div class="bd-highlight mx-1 text-center align-self-end w-100">
                <p class="m-1"><%= link_to item.name, item_path(item) %></p>
              <% if item.purchase_status == true %>
                <p class="m-auto w-25 bg-danger text-white rounded">買う</p>
              <% else %>
                <p style="height: 12px;"></p>
              <% end %>
              <% if item.period == nil %>
                <p style="height: 12px;"></p>
              <% elsif item.period > 0 %>
                <p class="my-1">あと<%= item.period %>日</p>
              <% elsif item.period == 0 %>
                <p class="my-1 text-danger">期限日</p>
              <% else %>
                <p class="my-1 text-danger">期限切れ</p>
              <% end %>
              <% if item.deadline == nil %>
                <p style="height: 12px;"></p>
              <% else %>
                <p class="my-1">期限日 <%= item.deadline %></p>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="row justify-content-center">
      <div class="col d-flex justify-content-center pt-2">
        <%= paginate @items %>
      </div>
    </div>
    <% end %>
    </div>
  </div>
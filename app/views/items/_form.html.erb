<%= form_with model: item, url: items_path, local:true do |f| %>
  <%= f.hidden_field :storage_id, value: params[:storage_id] %>
  <div class="form-row">
    <div class="form-group d-flex col-12">
      <label class="w-50 m-auto">アイテム名</label>
      <%= f.text_field :name, class: "form-control", placeholder: "名前" %>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group d-flex col-md-12">
      <label class="w-25 m-auto">個数</label>
      <%= f.text_field :amount, class: "form-control", placeholder: "個数" %>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group d-flex col-md-12">
      <label class="w-25 m-auto">期限日</label>
      <%= f.date_field :deadline, class: "form-control" %>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group d-flex col-md-12">
      <label class="w-25 m-auto">画像</label>
      <%= f.file_field :image_id, accept: "image/*" %>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-7">
      <lavel>持ち主</lavel>
      <%= f.select :owner, options_from_collection_for_select(Member.where(user_id: current_user.id), :name, :name, :selected => @item.owner), :include_blank => true, class: "form-control" %>
    </div>
    <div class="form-group col-md-5">
      <%= f.label :purchase_status, '買う' %>
      <%= f.check_box :purchase_status, check:true %>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-12">
      <lavel>コメント</lavel>
      <%= f.text_area :comment, class: "form-control" %>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-12">
      <%= f.submit '追加', class: 'btn btn-primary btn-block' %>
    </div>
  </div>
<% end %>

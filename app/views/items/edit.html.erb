<%= form_with model: @item, url: item_path, local:true do |f| %>
  <%= image_tag @item.get_image_id, size: '220x150' %>
  <div>
    <%= f.label :image_id %>
    <%= f.file_field :image_id, accept: "image/*" %>
  </div>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :comment %>
    <%= f.text_field :comment %>
  </div>
  <div>
    <%= f.label :amount %>
    <%= f.text_field :amount %>
  </div>
  <div>
    <%= f.label :deadline %>
    <%= f.date_field :deadline %>
  </div>
  <div>
    <%= f.label :owner %>
    <%= f.text_field :owner %>
  </div>
  <div>
    <%= f.label :purchase_status, '買う' %>
    <%= f.check_box :purchase_status, check:true %>
  </div>
  <div>
    <%= @item.deleted_at %>
    <%= f.submit '更新する' %>
  </div>
<% end %>
<%= form_with model: @item, url: item_path, local:true do |f| %>
  <%= f.hidden_field :deleted_at, value: true %>
  <%= f.submit '削除する' %>
<% end %>

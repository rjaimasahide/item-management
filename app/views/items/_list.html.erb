<% items.each do |item| %>
  <div class="col">
    <div  class="row shadow-sm h-100 pt-2 mb-2 bg-body rounded flex-column text-aline">
      <div class="bd-highlight mx-1 text-center">
        <%= link_to edit_item_path(item) do %>
          <p class="mx-auto"><%= image_tag item.get_image_id, width: '60%', height: '60%' %></p>
        <% end %>
        <p class="m-1"><%= link_to item.name, edit_item_path(item) %></p>
        <% if item.purchase_status == true %>
          <p class="m-auto w-25 bg-danger text-white rounded">買う</p>
        <% else %>
          <p class="p-1"></p>
        <% end %>
        <% if item.period == nil %>
          <p class="my-1"></p>
        <% elsif item.period > 0 %>
          <p class="my-1">あと<%= item.period %>日</p>
        <% elsif item.period == 0 %>
          <p class="my-1 text-danger">期限日です</p>
        <% else %>
          <p class="my-1 text-danger">期限が切れています</p>
        <% end %>
        <% if item.deadline == nil %>
        <% else %>
          <p class="my-1">期限日 <%= item.deadline %></p>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
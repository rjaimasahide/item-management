<div class="container">
  <div class="row mt-4 text-center d-flex justify-content-center" style="height: 90px;">
    <h2>ログイン</h2>
  </div>
  <div class="row text-center d-flex justify-content-center">
    <div class="col-md-6">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="form-row d-flex justify-content-center">
        <div class="form-group col-6">
          <lavel>ユーザー名</lavel>
          <%= f.text_field :name, class: "form-control", placeholder: "ユーザー名", autofocus: true, autocomplete: "name" %>
        </div>
      </div>
      <div class="form-row d-flex justify-content-center">
        <div class="form-group col-6">
          <lavel>パスワード</lavel>
          <%= f.password_field :password, class: "form-control", placeholder: "パスワード", autocomplete: "current-password" %>
        </div>
      </div>
      <div class="form-row text-right d-flex justify-content-center">
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
      </div>
      <div class="form-row d-flex justify-content-center">
        <div class="form-group col-6">
          <%= f.submit "ログイン", class: "btn btn-success w-100" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
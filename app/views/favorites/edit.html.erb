お気に入り編集画面
<%= form_with model: @favorite, url: favorite_path, local:true do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :storage_id %>
    <%= f.select :storage_id, options_from_collection_for_select(Storage.all, :id, :name), {prompt: 'ジャンルを選択してください'} %>
  </div>
  <div>
    <%= f.label :image_id %>
    <%= f.file_field :image_id, accept: "image/*" %>
  </div>
  <div>
    <%= f.label :amount %>
    <%= f.text_field :amount %>
  </div>
  <div>
    <%= f.label :deadline %>
    <%= f.date_field :deadline %>
  </div>
  <div>
    <%= f.label :owner %>
    <%= f.text_field :owner %>
  </div>
  <div>
    <%= f.label :purchase_status, '買う', value: true %>
    <%= f.radio_button :purchase_status, true %>
    <%= f.label :purchase_status, '買わない', value: false %>
    <%= f.radio_button :purchase_status, false %>
  </div>
  <div>
    <%= f.submit '更新' %>
  </div>
<% end %>
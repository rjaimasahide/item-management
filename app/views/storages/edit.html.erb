<div class="container text-center">
  <h3 class="mt-3"><%= @storage.name %></h3>
  <div class="text-danger text-center pt-3">
    <%= flash[:danger] %>
  </div>
  <div class="row mt-5">
    <div class="col d-flex justify-content-center text-center">
      <div class="form-inline">
      <%= form_with model: @storage, url: storage_path(@storage), local:true do |f| %>
        <%= f.text_field :name, class: "form-control", placeholder: "タグ名" %>
        <%= f.submit "名前変更", class: "btn btn-primary ml-2" %>
      <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col text-center">
      <%= link_to 'このタグを削除する', storage_path(@storage), method: :delete, data: { confirm: "この保管庫を削除しますか？" } %>
    </div>
  </div>
</div>
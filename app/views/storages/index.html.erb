<div class='container px-5 px-sm-0'>
  <div class="row">
    <div class="col-md-4 text-center">
      <h3>メンバー</h3>
        <% @members.each do |member| %>
          <table>
            <tr>
              <th class="text-left" style="width: 150px;">
                <%= link_to member_path(member), method: :delete, data: { confirm: "このメンバーを削除しますか？" } do %>
                  <i class="far fa-trash-alt"></i>
                <% end %>
                メンバー名
              </th>
              <td class="text-center"><%= member.name %></td>
            </tr>
          </table>
        <% end %>
      <div class="mt-4 form-inline">
        <%= form_with model: @member, url: members_path, local:true do |f| %>
          <div class="form-row">
            <div class="form-group">
              <%= f.text_field :name, class: "form-control", placeholder: "メンバー名" %>
              <%= f.submit '追加', class: "btn btn-primary ml-2" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-md-7 ml-4 text-center">
      <h3>買うものリスト</h3>
      <div class="row row-cols-2">
        <%= render 'items/list', items: @items %>
      </div>
      <div class="row justify-content-center">
        <div class="col d-flex justify-content-center pt-2">
          <%= paginate @items %>
        </div>
      </div>
    </div>
  </div>
</div>
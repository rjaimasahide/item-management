<div class="container text-center m-auto">
  <h3 class="mt-3">タブを新しく作成</h3>
  <div class="text-danger text-center pt-3">
    <%= flash[:danger] %>
  </div>
  <div class="row mt-5">
    <div class="col d-flex justify-content-center text-center">
      <div class="form-inline">
        <%= form_with model: @storage, url: storages_path, local:true do |f| %>
          <%= f.text_field :name, class: "form-control", placeholder: "タブ名" %>
          <%= f.submit "新規登録", class: "btn btn-primary w-50 mt-3" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
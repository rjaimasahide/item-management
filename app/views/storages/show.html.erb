<div class="container">
  <div calss="row">
    <div class="form-inline text-left">
      <h3><b><%= @storage.name %>のアイテム一覧</b></h3>
      <h5>(全<%= @items.count %>件)</h5>
      <%= link_to '保管所名変更', edit_storage_path(@storage) %>
      <%= link_to '削除', storage_path(@storage), method: :delete, data: { confirm: "この保管庫を削除しますか？" } %>
    </div>
    <div class="row row-cols-4">
      <%= render 'items/list', items: @items %>
    </div>
    <%= link_to "物品追加", new_item_path(storage_id: @storage.id) %>
    <%= form_with url: storage_path(@storage), method: :get do |f| %>
      <%= f.select :order, options_for_select([["更新日順","updated_at_order"],["期限順","latest_order"],["買うもの優先","purchase_status_order"],["名前順","name_order"]], :selected => params[:order]) %>
      <%= f.hidden_field :storage_id, value: @storage.id %>
      <%= f.submit '並び替える' %>
    <% end %>
  </div>
</div>